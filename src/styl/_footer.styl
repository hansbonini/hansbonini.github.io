.comments
    center(rem(800px))
    padding 0 rem(20px)
    h3
        color primary
        margin 0 0 rem(30px)
        font-size rem(30px)

footer
    center(rem(800px))
    border-top 1px solid darken(primary, 10%)
    background darken(bg_color,30%)
    padding rem(20px) rem(25px)
    margin-top rem(50px)
    mainFont(300)
    +above(cut)
        margin-top rem(100px)
    p
        width 100%
        display inline-block
        text-align center
        text-decoration none
        color primary
        font-size rem(16px)
        line-height rem(25px)
    span
        font-weight 700
    svg
        size(28,28)
        display inline-block
        vertical-align middle
        margin-right rem(10px)
        +above(cut)
            margin-right rem(20px)
        &.love
            size(20,20)
            fill bg_color
            margin-top rem(-2px)
            margin-left rem(3px)
            margin-right rem(3px)
    a
        fill #808080
        transition all .3s ease
        text-decoration none
        color #808080
        &:hover
            fill bg_color
        &.creator:hover
            text-decoration underline
    ul
        display: inline-block
        width 100%
        text-align center
        padding 0
        list-style-type none
        li
            float left
            margin-bottom rem(10px)
        li:before
            content '|'
            padding 0 20px
        li:first-child:before
            content ''
        a
            text-decoration none
            font-size rem(15px)
            &:hover
                text-decoration underline

.main-page
    footer
        background darken(bg_color, 30%)
        border-top 1px solid darken(primary, 10%)
        p
            color primary
