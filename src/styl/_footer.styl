.comments
    center(rem(800px))
    padding 0 rem(20px)
    h3
        color primary
        margin 0 0 rem(30px)
        font-size rem(30px)

footer
    secondaryFont(100)
    position fixed
    height rem(30px)
    width 100%
    bottom 0
    background darken(bg_color,30%)
    z-index 20
    .devicons
      font-size: rem(12px)
      margin: 0
      padding: 0
    li
        margin 0
        list-style-type none
    ul
        margin 0
        padding 0
    .footer_bar
        background-color bg_color
        padding 0
        margin 0
        cf()
        svg
            size(15,15)
            vertical-align middle
            margin-right rem(10px)
            +above(cut)
                margin-right rem(20px)
            &.love
                size(15,15)
                fill bg_color
                margin-left rem(3px)
                margin-right rem(3px)
        ul
            col(1.3/2)
            +below(1000px)
                col(2/2)
            li
                transform skewx(-20deg)
                height 30px
                margin 0 0 0 rem(-2px)
                padding rem(3px) rem(4px) rem(6px) rem(4px)
                background warning
                display inline-block
                &:first-child
                    background primary
                    padding rem(5px) rem(10px) rem(5px) rem(20px)
                    margin-left rem(-10px)
                    color bg_color
                    a
                      color bg_color
                      text-decoration none
                &:nth-child(2)
                  padding rem(5px) rem(20px)
                  a
                    text-decoration none
                &:nth-child(3)
                    background success
                    padding rem(5px) rem(20px)
                &:last-child
                    float right
                    background primary
                    margin-right: rem(-10px)
                    padding rem(5px) rem(30px)
                    span
                        color default
                &:nth-child(3),
                &:nth-child(4)
                    +below(cut)
                        display none
.main-page
    footer
        background darken(bg_color, 30%)
        p
            color primary
